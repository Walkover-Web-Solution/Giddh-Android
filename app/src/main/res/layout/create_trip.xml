<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all">

    <include
        android:layout_marginTop="15dp"
        layout="@layout/error_message_layout"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_width="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter trip name here.."
        android:inputType="textAutoComplete"
        android:textColorHint="@color/light_black"
        android:background="@drawable/border_ed_common"
        android:textSize="22sp"
        android:gravity="center_vertical|left"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/name_trip" />


    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/auto_comp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_trip"
        android:orientation="horizontal"
        android:weightSum="1">

        <AutoCompleteTextView
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_email"
            android:textSize="18sp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:background="@drawable/border_ed_common"
            android:layout_weight="1"
            android:hint="@string/enter_email"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:imeOptions="actionDone"
            android:imeActionLabel="ADD" />

        <ImageButton
            android:id="@+id/add_multi_email"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/add_multi_email"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_header"
        android:text="Sharing Trip With"
        android:textSize="18dp"
        android:gravity="center_horizontal"
        android:textColor="@color/material_blue_grey_950"
        android:layout_below="@+id/auto_comp" />


    <ListView
        android:id="@+id/email_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_header"
        android:layout_above="@+id/add_mail"
        android:layout_height="wrap_content"
        tools:context=".TripPage"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        tools:listitem="@layout/email_row"></ListView>

    <Button
        android:id="@+id/add_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="7dp"
        android:background="@color/orange_footer_head"
        android:textColor="@color/white"></Button>

</RelativeLayout>
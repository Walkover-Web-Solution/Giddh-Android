<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_all">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/total_spend"
        android:background="@color/white"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL"
            android:id="@+id/total"
            android:textColor="#6D6D6D"
            android:textSize="18dp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/total_expense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="55dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/total"
            android:text="0.0"
            android:gravity="center_horizontal|center_vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:textColor="#6D6D6D" />

        <LinearLayout
            android:id="@+id/per_head_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/total_expense"
            android:weightSum="10"
            android:layout_margin="5dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/today"
                android:gravity="center_horizontal"
                android:layout_weight="5"
                android:textSize="18dp"
                android:textColor="@color/action_bar_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY EXPENSE" />


            <TextView
                android:id="@+id/perhead"
                android:layout_weight="5"
                android:textSize="18dp"
                android:textColor="@android:color/holo_green_dark"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PER HEAD" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/per_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/per_head_text"
            android:weightSum="10"
            android:gravity="center_horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/today_expense"
                android:gravity="center_horizontal"
                android:layout_weight="5"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />


            <TextView
                android:id="@+id/expense_per_head"
                android:layout_weight="5"
                android:textSize="25dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
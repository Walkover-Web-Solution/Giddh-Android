<FrameLayout
    android:id="@+id/root_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/root"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:background="@color/bg_all"
                    android:layout_height="match_parent">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saved Trips"
            android:textSize="18dp"
            android:textColor="@color/material_blue_grey_950"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center_horizontal"/>

        <ListView
            android:layout_below="@+id/heading"
            android:layout_above="@+id/foot"
            android:id="@+id/saved_trips"
            android:layout_width="match_parent"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/list_selector_common"
            android:divider="#9b9999"
            android:dividerHeight="0.1dp"></ListView>

        <RelativeLayout
            android:id="@+id/foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange_footer_head"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/add_new_trip"
                android:layout_width="52dp"
                android:layout_height="52dp"

                android:layout_margin="5dp"
                android:background="@drawable/add_action"/>
        </RelativeLayout>


    </RelativeLayout>


    <com.Giddh.commonUtilities.ClipRevealFrame
        android:id="@+id/menu_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_arc"
        android:visibility="gone">

        <com.ogaclejapan.arclayout.ArcLayout
            android:id="@+id/arc_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:arc_axisRadius="100dp"
            app:arc_origin="center"
            app:arc_radius="135dp">

            <LinearLayout
                android:id="@+id/transaction_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="?listPreferredItemHeight"
                    android:layout_height="?listPreferredItemHeight"
                    android:src="@drawable/summary_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Transaction"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="?listPreferredItemHeight"
                    android:layout_height="?listPreferredItemHeight"
                    android:src="@drawable/summary_arc"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Summary"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="?listPreferredItemHeight"
                    android:layout_height="?listPreferredItemHeight"
                    android:src="@drawable/setting_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:text="Settings"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="?listPreferredItemHeight"
                    android:layout_height="?listPreferredItemHeight"
                    android:src="@drawable/company"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Company"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

        </com.ogaclejapan.arclayout.ArcLayout>

        <Button
            android:id="@+id/center_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"/>
    </com.Giddh.commonUtilities.ClipRevealFrame>

    <ImageButton
        android:id="@+id/reveal_button"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:layout_gravity="top|start"
        android:alpha="0.4"
        android:background="@android:color/transparent"
        android:padding="8dp"/>
</FrameLayout>

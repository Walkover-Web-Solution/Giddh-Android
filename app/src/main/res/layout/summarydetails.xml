<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.Giddh.commonUtilities.FontTextView
            android:id="@+id/opening_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp" />

        <com.Giddh.commonUtilities.FontTextView
            android:id="@+id/closing_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/opening_bal"
            android:gravity="right"
            android:textSize="12sp" />
    </RelativeLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ExpandableListView
            android:id="@+id/details_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:childDivider="#9b9999"
            android:divider="#C7C7C9"
            android:dividerHeight="0.1dp"
            android:listSelector="@drawable/list_selector_common"
            android:transcriptMode="alwaysScroll"></ExpandableListView>

        <TextView
            android:id="@+id/emp_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/alert"
            android:gravity="center_horizontal"
            android:text="No transaction :("
            android:textColor="@color/half_black"
            android:textSize="35dp"
            android:visibility="gone" />

        <com.getbase.floatingactionbutton.AddFloatingActionButton
            android:id="@+id/add_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:visibility="gone"
            fab:fab_addButtonColorPressed="@color/white_pressed"
            fab:fab_colorNormal="@color/orange_default_color"
            fab:fab_colorPressed="@color/orange_footer_head" />
    </FrameLayout>


</LinearLayout>